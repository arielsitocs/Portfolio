---
interface Props
{
    link: string;
    icon: any;
    name: string;
}

const {link, icon = "Missing Icon!", name = "Missing Name!"} = Astro.props;
---

<div class="contact">
    <a href={link}><img src={icon}></a>
    <h3>{name}</h3>
</div>

<style>
    .contact
    {
        display: flex;
        align-items: center;
        flex-direction: column;
        width: 30%;
        margin: 5%;
        padding: 10%;
        background-color: rgb(31, 31, 31);
        border-radius: 10px;
    }

    .contact img
    {
        border: none;
        width: 100%;
        max-width: 100%;
        transition: transform 0.4s ease, margin-bottom 0.4s ease, background 0.4s ease;
    }

    .contact img:hover
    {
        transform: scale(1.1);
        cursor: pointer;
        /* background-color: orange; */
    }

    .contact h3 
    {
        font-family: 'Lexend Deca', sans-serif;
        font-size: 0.9vw;
        color: orange;
    }

    @media (max-width: 768px)
    {
        .contact 
        {
            padding: 45%;
            margin: 10%;
        }

        .contact a {
        width: 250%;
    }
        
        .contact h3 
        {
            font-size: 2.2vw;
        }
    }
</style>